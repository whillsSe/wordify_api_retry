<Context>
<Connector port="8080" minSpareThreads="10" maxThreads="100" keepAliveSeconds="120">
<Resource name="jdbc/MyLocalDB"
          auth="Container"
          type="javax.sql.DataSource"
          driverClassName="com.mysql.cj.jdbc.Driver"
          url="jdbc:mysql://${DB_HOST}:3306/wordify"
          username="${DB_USER}"
          password="${DB_PASSWORD}"
          maxActive="100"
          maxIdle="20"
          minIdle="5"
          maxWait="10000"
/>
</Context>